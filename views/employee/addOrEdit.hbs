<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input 
        type="hidden" 
        name="_id" 
        value="{{employee._id}}" 
    />
    <div class="form-group">
        <label>Full Name</label>
        <input 
            type="text" 
            class="form-control" 
            name="fullName" 
            placeholder="What is your full name?" 
            value="{{employee.fullName}}" 
        />
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input 
            type="text" 
            class="form-control" 
            name="email" 
            placeholder="Please put your email address here" 
            value="{{employee.email}}" 
        />
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile Phone number</label>
            <input 
                type="text" 
                class="form-control" 
                name="mobile" 
                placeholder="Tell us your mobile phone number.." 
                value="{{employee.mobile}}" 
            />
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input 
                type="text" 
                class="form-control" 
                name="city" 
                placeholder="In what city do you live ?" 
                value="{{employee.city}}" 
            />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-database"></i> Submit
        </button>
        <a href="/employee/list" class="btn btn-secondary">
            <i class="fa fa-list-alt"></i> View All
        </a>
    </div>
</form>
